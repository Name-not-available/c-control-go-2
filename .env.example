# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
ENABLE_TELEGRAM_BOT=true

# API Provider Configuration
# Options:
#   "google" (default) - Google Maps only
#   "osm" - OpenStreetMap only (FREE, no API key needed!)
#   "both" - Search both providers in parallel and combine results
API_PROVIDER=both

# Google Maps API Configuration
# Required if API_PROVIDER=google or API_PROVIDER=both
# Get your API key from: https://console.cloud.google.com/
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# OpenStreetMap Configuration
# NO API KEY NEEDED! OpenStreetMap is completely free.
# It uses the Overpass API which doesn't require authentication.
# More info: https://wiki.openstreetmap.org/wiki/Overpass_API

# HTTP Server Configuration
HTTP_PORT=8080

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
# All database settings are optional. If DB_HOST is not set,
# the application will run without database support.

# Database host (e.g., localhost, db.example.com)
DB_HOST=localhost

# Database port (default: 5432)
DB_PORT=5432

# Database name
DB_NAME=restaurant_bot

# Database user
DB_USER=restaurant_bot_user

# Database password
DB_PASSWORD=your_secure_password_here

# Database schema (default: public)
# Use a custom schema to isolate the application's tables
DB_SCHEMA=restaurant_bot

# SSL Mode for database connection
# Options: disable, allow, prefer (default), require, verify-ca, verify-full
DB_SSLMODE=prefer

# Allow insecure SSL connections (skip certificate verification)
# Only use this in development environments!
# Set to "true" or "1" to enable
DB_ALLOW_INSECURE_SSL=false
